@namespace Components
@using Auth0_Blazor.Icons

<MudDrawerContainer Style="height:100vh">
    <MudDrawer @bind-Open="@_openStart" Anchor="Anchor.Start" Variant="DrawerVariant.Persistent">
        <NavigationDrawer/>
    </MudDrawer>

    <div class="d-flex flex-column align-items-center justify-content-center overflow-hidden mt-3">
        <MudButton OnClick="@ToggleStartDrawer" Class="toggle-button mb-2 d-flex align-items-center justify-content-center green-text">
            <ToggleNavDrawer/>
            Navigation
        </MudButton>
        @Body
    </div>
</MudDrawerContainer>

@code {
    
    [Parameter]
    public RenderFragment? Body { get; set; }
    private bool _openStart = false;

    private void ToggleStartDrawer()
    {
        _openStart = !_openStart;
    }
}