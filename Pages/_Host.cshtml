@page "/"
@namespace Auth0_Blazor.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Authentication
@{
    Layout = "_Layout";

    var tokens = new InitialApplicationState
    {
        AccessToken = await HttpContext.GetTokenAsync("access_token"),
        IdToken = await HttpContext.GetTokenAsync("id_token"),
        RefreshToken = await HttpContext.GetTokenAsync("refresh_token"),
    };
}

@*This loads the initial state of the application, including tokens, and passes it to the App component.
(the app.razor is the root)*@
<component param-InitialState="tokens" type="typeof(App)" render-mode="ServerPrerendered" />

